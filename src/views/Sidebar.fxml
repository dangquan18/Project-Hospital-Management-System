                            <Image url="@/resources/user-injured.896x1024.png" />
                        </image>
                    </ImageView>
                    <Button fx:id="patientsButton" minWidth="134.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="134.0" style="-fx-font-size: 14px;" text="Patients" />

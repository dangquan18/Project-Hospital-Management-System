            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="200.0" spacing="20.0">
                <children>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/resources/calendar.483x512.png" />
                        </image>
                    </ImageView>
                    <Button fx:id="appointmentButton" mnemonicParsing="false" prefWidth="130.0" style="-fx-font-size: 14px;" text="Appointment" />
                </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="200.0" spacing="20.0">
                <children>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/resources/medical-notes.768x1024.png" />
                        </image>
                    </ImageView>
                    <Button fx:id="medicalRecordsButton" mnemonicParsing="false" prefWidth="130.0" style="-fx-font-size: 14px;" text="Medical Records" />
                </children>
            </HBox>

                <children>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/resources/male-doctor.1024x1022.png" />
                        </image>
                    </ImageView>
                    <Button fx:id="doctorHistoryButton" mnemonicParsing="false" prefWidth="130.0" style="-fx-font-size: 14px;" text="Doctor History" />
                </children>
            </HBox>
        </children>
    </VBox>

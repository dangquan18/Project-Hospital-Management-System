<AnchorPane prefHeight="955.0" prefWidth="300" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SidebarController">
    <VBox alignment="TOP_CENTER" prefHeight="955" prefWidth="300.0" spacing="15" stylesheets="@/resources/sidebar.css" BorderPane.alignment="CENTER">
        <padding>
            <Insets left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
